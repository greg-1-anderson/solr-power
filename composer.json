{
    "name": "pantheon-systems/solr-power",
    "description": "An open source plugin to connect to Pantheon's Apache Solr search infrastructure, or your own!",
    "type": "wordpress-plugin",
    "license": "MIT",
    "authors": [
        {
            "name": "Pantheon",
            "email": "noreply@pantheon.io"
        }
    ],
    "support": {
        "issues": "https://github.com/pantheon-systems/solr-power/issues"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "config": {
        "platform": {
            "php": "8.2"
        },
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true
        }
    },
    "require": {
        "solarium/solarium": "^6",
        "symfony/event-dispatcher": "^7",
        "guzzlehttp/guzzle": "^7"
    },
    "require-dev": {
        "wp-coding-standards/wpcs": "^3",
        "phpunit/phpunit": "^11",
        "squizlabs/php_codesniffer": "^3.9"
    },
    "scripts": {
        "lint": [
            "@phpcbf",
            "@phpcs"
        ],
        "fix": [
            "@phpcbf"
        ],
        "phpcs": "vendor/bin/phpcs",
        "phpcbf": "vendor/bin/phpcbf",
        "phpunit": "vendor/bin/phpunit",
        "test": [
            "@phpunit"
        ]
    },
    "autoload": {
        "psr-4": {
            "Pantheon\\": "src/"
        }
    }
}
